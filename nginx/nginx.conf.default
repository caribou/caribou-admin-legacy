server {
    listen 80;
    server_name admin.caribou;

    root /Users/yourname/Projects/caribou-admin/public;

    index caribou.html;

    location /img {
        if (-f $request_filename) {
            break;
        }
    }

    location / {
        try_files $uri $uri.html $uri/index.html /caribou.html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
}

